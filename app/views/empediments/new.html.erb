<h1>New empediment</h1>

<% form_for(@empediment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p>
    <%= f.label :solved %><br />
    <%= f.check_box :solved %>
  </p>
  <p>
    <%= f.label :sprint_id %><br />
    <%= collection_select(:empediment, :sprint_id, Sprint.find(:all), :id, :name, {:prompt => true})%>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :ideas %><br />
    <%= f.text_area :ideas %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', empediments_path %>
