<h1>New task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p>
    <%= f.label :sprint_id %><br />
    <%= collection_select(:task, :sprint_id, Sprint.find(:all), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :backlog_id %><br />
    <%= collection_select(:task, :backlog_id, Backlog.find(:all), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :bug_id %><br />
    <%= collection_select(:task, :bug_id, Bug.find(:all), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
